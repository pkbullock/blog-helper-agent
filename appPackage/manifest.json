{
    "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.19/MicrosoftTeams.schema.json",
    "manifestVersion": "1.19",
    "version": "1.0.0",
    "id": "${{TEAMS_APP_ID}}",
    "developer": {
        "name": "Teams App, Inc.",
        "websiteUrl": "https://pkbullock.com",
        "privacyUrl": "https://pkbullock.com/privacy",
        "termsOfUseUrl": "https://pkbullock.com/termofuse"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "Blog helper agent",
        "full": "Blog helper for content creation Agent"
    },
    "description": {
        "short": "Helper that supports the authoring, reviews and creation of blog posts.",
        "full": "Declarative agent that supports the authoring, reviews and creation of blog posts."
    },
    "accentColor": "#FFFFFF",
    "composeExtensions": [],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "copilotAgents": {
        "declarativeAgents": [            
            {
                "id": "declarativeAgent",
                "file": "declarativeAgent.json"
            }
        ]
    },
    "validDomains": []
}